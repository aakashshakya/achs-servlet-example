<?xml version="1.0" encoding="UTF-8"?>
<web-app>
   
    <servlet>
       <servlet-name>DemoServlet</servlet-name>
       <servlet-class>com.servlet.application.DemoServlet</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>DemoServlet</servlet-name>
       <url-pattern>/home</url-pattern>
   </servlet-mapping>
   
   <servlet>
       <servlet-name>ServletGetRequestExample</servlet-name>
       <servlet-class>com.servlet.application.ServletGetRequestExample</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>ServletGetRequestExample</servlet-name>
       <url-pattern>/getRequest</url-pattern>
   </servlet-mapping>
   
   <servlet>
       <servlet-name>ServletPostRequestExample</servlet-name>
       <servlet-class>com.servlet.application.ServletPostRequestExample</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>ServletPostRequestExample</servlet-name>
       <url-pattern>/postRequest</url-pattern>
   </servlet-mapping>
   
   <servlet>
       <servlet-name>InitilizationParameterExample</servlet-name>
       <servlet-class>com.servlet.application.InitilizationParameterExample</servlet-class>
       <init-param>
           <param-name>dbUsername</param-name>
           <param-value>root</param-value>
       </init-param>
       <init-param>
           <param-name>dbPassword</param-name>
           <param-value>hello-world</param-value>
       </init-param>
   </servlet>
   <servlet-mapping>
       <servlet-name>InitilizationParameterExample</servlet-name>
       <url-pattern>/initParam</url-pattern>
   </servlet-mapping>
   
</web-app>